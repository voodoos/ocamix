(executable
 (name main)
 (modes js)
 (js_of_ocaml
  (flags
   (:standard --no-inline)))
 (libraries
  js_of_ocaml
  lwd
  brr-lwd
  brr-lwd-ui
  brr-lwd-ui.bindings.yjs
  brr-lwd-ui.bindings.quill
  brr-lwd-ui.bindings.y-quill
  hector
  uuidm))

(rule
 (deps
  main.bc.js
  package.json
  yarn.lock
  (source_tree node_modules))
 (targets bundle.js bundle.js.map)
 (mode
  (promote (until-clean)))
 (action
  (progn
   (run yarn)
   (run yarn build))))

(alias
 (name examples)
 (deps bundle.js))

(copy_files
 (mode
  (promote (until-clean)))
 (alias examples)
 (files ../../css/brr_lwd_ui.css))

